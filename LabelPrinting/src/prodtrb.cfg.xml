<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

    <session-factory>
        
    	<!--  prod -->
        <property name="connection.url">jdbc:mysql://*/trb</property>
        <property name="connection.username">*</property>
        <property name="connection.password">*</property>

        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="myeclipse.connection.profile">mysql</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="connection.provider_class">org.hibernate.connection.C3P0ConnectionProvider</property>

		<!-- Enable Hiberate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Times in seconds: 3600s=1hr, 18000=5hr     -->
		<property name="hibernate.c3p0.min_size">10</property>
		<property name="hibernate.c3p0.max_size">50</property>
		<property name="hibernate.c3p0.timeout">1800</property> <!-- seconds -->
		<property name="hibernate.c3p0.max_statements">50</property>
		<property name="hibernate.c3p0.idle_test_period">300</property> <!-- 300 -->
		<property name="hibernate.c3p0.acquire_increment">5</property> <!-- 5 -->
		
		<property name="hibernate.jdbc.batch_size">100</property>
		<property name="hibernate.cache.use_second_level_cache">false</property>

		<!-- Show and print nice SQL on stdout -->
		<property name="show_sql">false</property>
		<property name="format_sql">false</property>

		<mapping resource="gov/nrel/nbc/labelprinting/server/model/Trb.hbm.xml" />
		<mapping resource="gov/nrel/nbc/labelprinting/server/model/CalcSSFile.hbm.xml" />
   
    </session-factory>

</hibernate-configuration>