<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">
    
  <display-name>Spreadsheet Ingestion V2.0 - Build @buildNum@ - Built on @buildDate@</display-name>
    
  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>SpreadSheet.html</welcome-file>
  </welcome-file-list>

  <!-- Spreadsheet Service. -->
  <servlet>
    <servlet-name>spreadSheetService</servlet-name>
    <servlet-class>gov.nrel.nbc.spreadsheet.server.SpreadSheetServiceImpl
    </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>spreadSheetService</servlet-name>
    <url-pattern>/spreadsheet/spreadSheetService</url-pattern>
  </servlet-mapping>

  <!-- Attachment Uploading Service. -->
  <servlet>
    <servlet-name>attachmentUploadService</servlet-name>
    <servlet-class>gov.nrel.nbc.spreadsheet.server.AttachmentFileUploadServiceImpl
    </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>attachmentUploadService</servlet-name>
    <url-pattern>/spreadsheet/attachmentUploadService</url-pattern>
  </servlet-mapping>

  <!-- File Downloading Service. -->
  <servlet>
    <servlet-name>fileDownloadService</servlet-name>
    <servlet-class>gov.nrel.nbc.spreadsheet.server.FileDownloadService
    </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>fileDownloadService</servlet-name>
    <url-pattern>/spreadsheet/fileDownloadService</url-pattern>
  </servlet-mapping>

  <!-- File Uploading Service. -->
  <servlet>
    <servlet-name>clientUploadService</servlet-name>
    <servlet-class>gov.nrel.nbc.spreadsheet.server.SpreadSheetUploadServiceImpl
    </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>clientUploadService</servlet-name>
    <url-pattern>/spreadsheet/clientUploadService</url-pattern>
  </servlet-mapping>

  <!-- Excel Downloading Service. -->
  <servlet>
    <servlet-name>clientDownloadService</servlet-name>
    <servlet-class>gov.nrel.nbc.spreadsheet.server.ExcelDownloadService
    </servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>clientDownloadService</servlet-name>
    <url-pattern>/spreadsheet/clientDownloadService</url-pattern>
  </servlet-mapping>

	<jsp-config>
		<taglib>
		<taglib-uri>http://java.sun.com/jsp/jstl/core_rt</taglib-uri>
		<taglib-location>/WEB-INF/tld/c-rt.tld</taglib-location>
		</taglib>
	</jsp-config>
	

</web-app>
